<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfo"
    android:background="@drawable/main"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/design_default_color_on_primary">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/welcome">

            </ImageView>

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:id="@+id/textviewelcom"-->
            <!--                android:layout_centerHorizontal="true"-->
            <!--                android:layout_marginTop="80dp"-->
            <!--                android:textAppearance="@style/TextAppearance.AppCompat.Headline"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:hint="Welcome">-->

            <!--            </TextView>-->
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">



            <!--name-->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_prof"
                android:background="@drawable/ic_profile">


            </ImageView>

            <EditText
                android:id="@+id/textviewfullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/ic_prof"
                android:layout_marginStart="50dp"
                android:hint="First Name"
                android:textSize="18sp">

            </EditText>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textviewfullname"
                android:background="#808080"
                android:id="@+id/namediv">

            </View>





            <!--gender -->

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_lastname"
                android:background="@drawable/ic_profile"
                android:layout_below="@+id/emaildiv"
                android:layout_marginTop="20dp">

            </ImageView>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emaildiv"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:hint="Last Name"
                android:id="@+id/lastname"/>

            <!--email-->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_email"
                android:background="@drawable/ic_email"
                android:layout_below="@+id/namediv"
                android:layout_marginTop="20dp">

            </ImageView>


            <EditText
                android:id="@+id/textview_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namediv"
                android:layout_alignStart="@+id/ic_email"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="Email"
                android:textSize="18sp">

            </EditText>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textview_email"
                android:background="#808080"
                android:id="@+id/emaildiv">

            </View>







        </RelativeLayout>
        <Button
            android:id="@+id/book"
            android:text="Book"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:onClick="bookonclick"
            android:background="@color/cardview_shadow_start_color"
            >

        </Button>

    </LinearLayout>




</ScrollView>